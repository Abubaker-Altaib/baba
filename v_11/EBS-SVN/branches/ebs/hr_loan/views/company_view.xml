<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- ============ Employee types Configuration ============ -->
		<record id="hr_loan_employee_types" model="ir.ui.view">
			<field name="name">hr.loan.employee.types</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="hr_custom.hr_employee_types" />
			<field name="arch" type="xml">
				<xpath expr='/form/sheet/notebook/page[@name="Employee_Types"]'
					position="inside">
					<group string="Loan">
						<field name="loan_employee" />
						<field name="loan_contractors" />
						<field name="loan_recruit" />
						<field name="loan_trainee" />
					</group>
				</xpath>
			</field>
		</record>
	</data>
</openerp>
