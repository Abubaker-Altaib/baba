<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!--
        Sequences types for  budget operation
        -->
        <record id="seq_type_budget_operation" model="ir.sequence">
            <field name="name">Budget Operation</field>
            <field name="code">account.budget.operation</field>
        </record>

        
        <!--
        Sequences for budget operation
        -->
        <record id="seq_budget_operation" model="ir.sequence">
            <field name="name">Account Budget Operation</field>
            <field name="code">account.budget.operation</field>
            <field eval="3" name="padding"/>
            <field name="prefix">%(year)s/</field>
        </record>

        <!--
        Sequences for budget confirmation
        -->

        <record id="seq_budget_confirmation" model="ir.sequence">
            <field name="name">Account Budget Confirmation</field>
            <field name="code">account.budget.confirmation</field>
            <field name="prefix">BC/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            
        </record>

    </data>
</openerp>
