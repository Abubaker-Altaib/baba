<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_purchasequotation_document_inherit" inherit_id="purchase.report_purchasequotation_document">

		<xpath expr="//div/div[@class='oe_structure']" position="after" >
	        <center>
	            <table style="border: 0px solid white; padding: 0px 0px;">
	                <tbody>
	                    <tr>
	                        <td style="border: 0px solid white; padding: 0px 0px;">
	                            <center>

	                                <h1>شركة الخدمات المصرفية الإلكترونية المحدودة</h1>


	                                <h3>
	                                    الخرطوم شارع عثمان دقنة عمارة بنك السودان
	                                </h3>


	                                <h3>
	                                    Management of Services and Purchases
	                                </h3>

	                            </center>
	                        </td>
	                        <td style="border: 0px solid white; padding: 0px 0px;">
	                            <center>
	                                <img src="/purchase_custom/static/src/img/index.jpeg"/>
	                            </center>
	                        </td>
	                    </tr>
	                </tbody>
	            </table>
	        </center>
		</xpath>

		<xpath expr="//div[@class='row mt32 mb32']" position="attributes">
			<attribute name="style">font-size:20; padding-top: 40px; border-collapse:separate; border-spacing: 15px 40px;</attribute>
		</xpath>

		<xpath expr="//table[@class='table table-condensed']" position="attributes">
			<attribute name="style">font-size:20; padding-top: 60px; border-collapse:separate; border-spacing: 15px 40px;</attribute>
		</xpath>

	</template>
</odoo>
