<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="id_sale_order_all_report_view_summary" model="ir.ui.view">
            <field name="name">Sale Order All summary Report Wizard Form</field>
            <field name="model">sale.order.all.report.summary</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
               <form string="Sale Order All summary Report Wizard" version="7.0">
        			<separator string="Sale Order All Report" colspan="4"/>
            			<group>
            			<group col="2" colspan="2">
            				<field name="report_type" colspan="2"/>
            			</group>

            			<group col="4" colspan="4">
            				<field name="from_date"/>
            				<field name="to_date" />
            			</group>
            			<group col="4" colspan="4">
            		    <field name="category_id"  domain="[('active','=',False)]" required="True"/>
                            <field name="location_id"  />            			
                        </group>
            			
            			<group col="4" colspan="4" >
	                        <field name="payment_type" />
		    				<field name="scale_id" widget="selection"/>
            			</group>
            			<group col="4" colspan="4"  attrs="{'invisible': [('report_type','=','deduction')]}">
            		    		<field name="emp_id"  />
                           		 <field name="receive_state"  attrs="{'required': [('report_type','!=','deduction')]}"/>            			
                        	</group>
            			<group col="2" colspan="2" >
	                        <field name="company_id" />
            			</group>
            			<group col="4" colspan="4">
            		    		<field name="print_order"/>
                            		<field name="start_order"/>            			
                        	</group>

                               
            			</group>
	    			<footer>
          	    	<button name="print_report" string="Print" type="object" icon="gtk-print" default_focus="1" class="oe_highlight" colspan="2"/>
                        or
			<button special="cancel" string="_Cancel" icon="gtk-cancel" class="oe_link" colspan="2"/>
                        	</footer>
               </form>
            </field>
	    </record>

        <record id="action_sale_order_all_report_wizard_summary" model="ir.actions.act_window">
            <field name="name">Action Sale Order All summary  Report Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.all.report.summary</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="id_sale_order_all_report_view_summary"/>
            <field name="target">new</field>
        </record>

        <menuitem
                icon="STOCK_PRINT"
                name="Sale Order summary All Report"
                parent="menu_act_sale_report_view"
                action="action_sale_order_all_report_wizard_summary"
                id="menu_sale_order_all_report_wizard_summary"
                />

    </data>
</openerp>
