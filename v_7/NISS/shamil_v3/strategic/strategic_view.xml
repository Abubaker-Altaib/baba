            <field name="arch" type="xml">
                <kanban>
				
		<field name="name"/>
                    <field name="responsible"/>
           
                    <field name="expected"/>
                    <field name="actual"/>
                    <field name="color"/>
		<field name="objective_line"/>
		<field name="goal_line"/>
		<field name="strategic_line_ids"/>
