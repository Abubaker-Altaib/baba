<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="hr_holidays_status_absence" model="ir.ui.view">
			<field name="name">hr.holidays.status.absence</field>
			<field name="model">hr.holidays.status</field>
			<field name="inherit_id" ref="hr_inherit_holidays_status" />
			<field name="arch" type="xml">
				<!--xpath expr="//field[@name='religion']" position="after">
					<field name="absence" />
                </xpath-->
                <xpath expr="//field[@name='color_name']" position="after">
					<field name="absence" />
					<field name="permission"/>
					<field name="number_hour" 
						attrs="{'required':[('permission','=',True)], 'invisible':[('permission','!=',True)]}"/>
                </xpath>
				<xpath expr="//field[@name='save_leave']" position="attributes">
				   <attribute name="attrs">{'invisible': ['|',('absence','=',True),('permission','=',True)]}</attribute>
				</xpath>
			</field>
		</record>

		<!-- Holidays: Leave Request -->
		<record id="hr_absence_form" model="ir.ui.view">
			<field name="name">Leave Request</field>
			<field name="model">hr.holidays</field>
			<field name="priority">1</field>
			<field name="arch" type="xml">
				<form string="Employee Absence" version="7.0">
                    <header>
            			<button string="Approve" name="absence_validate" 
            				states="draft" type="workflow" groups="base.group_hr_user" class="oe_highlight" icon="gtk-apply"/>
                        <button string="Refuse" name="refuse" states="validate" 
                        	type="workflow" icon="gtk-no" groups="base.group_hr_user"/>
            			<button string="Reset to New" name="set_to_draft" 
            				states="refuse" type="object" 							groups="base.group_hr_user" icon="gtk-convert"/>
            			<field name="state" widget="statusbar" statusbar_visible="draft" statusbar_colors='{"draft":"blue","validate":"blue","refuse":"red"}'/>
        		    </header>
					<sheet string="Employee Absence">
						<group>
							<group>
								<field name="name" />
								<field name="holiday_status_id" 
									domain="[('absence','=',True)]" 
									context="{'employee_id':employee_id}" />
								<label for="number_of_days_temp" string="Duration"
									help="The default duration interval between the start date and the end date is 8 hours.=0" />
								<div>
									<group col="3">
										<field name="date_from" nolabel="1"
											on_change="onchange_date_from(date_to, date_from,holiday_status_id, employee_id,number_of_days_temp)"
											required="1" class="oe_inline" />
										<label string="-" class="oe_inline" />
										<field name="date_to" nolabel="1"
											on_change="onchange_date_to(date_to, date_from)" required="1"
											class="oe_inline" />
									</group>
									<div>
										<field name="number_of_days_temp" class="oe_inline" />
										days
									</div>
								</div>
								
							</group>
							<group>
								<field name="employee_id" domain="[('state','=','approved')]"
								       groups="base.group_hr_user" />
								<field name="department_id"
								       groups="base.group_hr_user" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_absence_tree">
			<field name="name">hr.holidays.tree</field>
			<field name="model">hr.holidays</field>
			<field name="arch" type="xml">
				<tree string="Absence">
					<field name="employee_id" />
					<field name="holiday_type" string="Mode" groups="base.group_hr_user" />
					<field name="name" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="number_of_days" string="Number of Days" sum="Remaining Days" />
					<field name="category_id" invisible="1" />
					<field name="department_id" invisible="not context.get('set_visible',False)" />
					<field name="holiday_status_id" invisible="1" />
					<field name="manager_id" invisible="1" />
					<field name="user_id" invisible="1" />
					<field name="state" invisible="1" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="hr_absence_action">
			<field name="name">Absence</field>
			<field name="res_model">hr.holidays</field>
			<field name="view_type">form</field>
           		<field name="view_mode">tree,form</field>
			<field name="view_id" eval="False"/>
			<field name="domain">[('holiday_status_id.absence','=','True')]</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to create a new employee absence.
				</p>
			</field>
		</record>
             
                <record id="action_absence_form" model="ir.actions.act_window.view">
		    <field eval="2" name="sequence"/>
		    <field name="view_mode">form</field>
		    <field name="view_id" ref="hr_absence_form"/>
		    <field name="act_window_id" ref="hr_absence_action"/>
		</record>

		<record id="action_recruit_form" model="ir.actions.act_window.view">
		    <field eval="1" name="sequence"/>
		    <field name="view_mode">tree</field>
		    <field name="view_id" ref="view_absence_tree"/>
		    <field name="act_window_id" ref="hr_absence_action"/>
		</record>

		<record model="ir.actions.act_window" id="hr_holidays.open_ask_holidays">
			<field name="name">Leave Requests</field>
			<field name="res_model">hr.holidays</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="hr_holidays.edit_holiday_new" />
			<field name="context">{'default_type': 'remove',
				'search_default_my_leaves':1}</field>
			<field name="domain">[('type','=','remove'),('holiday_status_id.absence','=',False),('holiday_status_id.permission','=',False)]
			</field>
			<field name="search_view_id" ref="hr_holidays.view_hr_holidays_filter" />
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to create a new leave request.
				</p>
				<p>
					Once you have recorded your leave request, it will be sent
					to a manager for validation. Be sure to set the right leave
					type (recuperation, legal holidays, sickness) and the exact
					number of open days related to your leave.
				</p>
			</field>
		</record>

		<menuitem name="Absence" parent="hr_holidays.menu_open_ask_holidays"
			id="menu_absence" action="hr_absence_action" sequence="40" />


		<!-- Permission -->
		<record id="hr_permission_form" model="ir.ui.view">
			<field name="name">Permission</field>
			<field name="model">hr.holidays</field>
			<field name="arch" type="xml">
				<form string="Employee Permission" version="7.0">
                  <header>
                    	<button string="Confirm Permission" name="permission_confirm" states="draft"
						icon="gtk-apply" colspan="2" groups="base.group_unit_manager" />
                    	<button string="Approve Permission" name="permission_validate" states="confirm" type="workflow" 							groups="base.group_hr_user,base.group_hr_manager" class="oe_highlight" icon="gtk-apply"/>
                    	<button string="Refuse" name="refuse" states="validate" type="workflow" 
                    	icon="gtk-no" groups="base.group_hr_user"/>
                    	<button string="Reset to New" name="set_to_draft" states="refuse" 
                    	type="object" groups="base.group_hr_user" icon="gtk-convert"/>
                    	<field name="state" widget="statusbar"
                    	statusbar_visible="draft" statusbar_colors='{"draft":"blue","validate":"blue","refuse":"red"}'/>
                  </header>
				  <sheet string="Employee Permission">
						<group>
							<group>
								<field name="name" />
								<field name="holiday_status_id" domain="[('permission','=',True)]" 								       context="{'employee_id':employee_id}" />
								<label for="number_of_days_temp" string="Duration"
									help="The default duration interval between the start date and the end date is 8 hours.=0" />
								<div>
									<group col="3">
										<field name="date_from" nolabel="1"
											on_change="onchange_date_from(date_to, date_from,holiday_status_id, employee_id,number_of_days_temp)"
											required="1" class="oe_inline" />
										<label string="-" class="oe_inline" />
										<field name="date_to" nolabel="1"
											on_change="onchange_date_to(date_to, date_from)" required="1"
											class="oe_inline" />
									</group>
                                      <field name="number_hours" on_change="onchange_number_hours(date_from,number_hours)" class="oe_inline" required="1" attrs="{'readonly':[('state','=',('validate'))]}"/>Hours
									<div>
										<field name="number_of_days_temp" class="oe_inline" groups="base.group_hr_user" invisible="1"/>
									</div>
								</div>
								<newline/>
                                <field name="notes" nolabel="1" colspan="4" placeholder="Add a reason..."/>
							</group>
							<group>
								<field name="employee_id" domain="[('state','=','approved')]" />
								<field name="department_id" groups="base.group_hr_user" />
							</group>
						</group>
					</sheet>
			    </form>
		    </field>
	    </record>
		
		<record model="ir.ui.view" id="view_permission_tree">
			<field name="name">hr.holidays.tree</field>
			<field name="model">hr.holidays</field>
			<field name="arch" type="xml">
				<tree string="Permission">
					<field name="employee_id" />
					<field name="holiday_type" string="Mode" invisible="1" />
					<field name="name" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="number_hours"/>
					<field name="number_of_days" string="Number of Days" sum="Remaining Days" invisible="1"/>
					<field name="category_id" invisible="1" />
					<field name="department_id" invisible="not context.get('set_visible',False)" />
					<field name="holiday_status_id" invisible="1" />
					<field name="manager_id" invisible="1" />
					<field name="user_id" invisible="1" />
					<field name="state" invisible="1" />
				</tree>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="hr_permission_action">
			<field name="name">Permissions</field>
			<field name="res_model">hr.holidays</field>
			<field name="view_type">form</field>
           		<field name="view_mode">tree,form</field>
			<field name="view_id" eval="False"/>
			<field name="domain">[('holiday_status_id.permission','=','True')]</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to create a new employee permission.
				</p>
			</field>
		</record>
             
        <record id="action_permission_form" model="ir.actions.act_window.view">
		    <field eval="2" name="sequence"/>
		    <field name="view_mode">form</field>
		    <field name="view_id" ref="hr_permission_form"/>
		    <field name="act_window_id" ref="hr_permission_action"/>
		</record>

		<record id="action_permission_tree" model="ir.actions.act_window.view">
		    <field eval="1" name="sequence"/>
		    <field name="view_mode">tree</field>
		    <field name="view_id" ref="view_permission_tree"/>
		    <field name="act_window_id" ref="hr_permission_action"/>
		</record>
		
		<menuitem name="Permissions" parent="hr_holidays.menu_open_ask_holidays"
			id="menu_permission" action="hr_permission_action" sequence="41" />

	</data>
</openerp>
