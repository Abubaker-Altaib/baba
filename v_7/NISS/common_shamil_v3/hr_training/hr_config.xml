<?xml version="1.0"?>
<openerp>
	<data>
		<record id="hr_inherit_human_resources_configuration" model="ir.ui.view">
			<field name="name">hr.config.settings.form.inherit</field>
			<field name="model">hr.config.settings</field>
			<field name="inherit_id" ref="hr.view_human_resources_configuration" />
			<field name="arch" type="xml">
				<xpath expr="/form" position="inside">
					<group>
						<label for="id" string="Training Accounts" />
						<div>
							<div>
								<label for="training_journal_id" />
								<field name="training_journal_id" class="oe_inline" />
							</div>
							<div>
								<label for="training_account_id" />
								<field name="training_account_id" class="oe_inline" />
							</div>
							<div>
								<label for="training_analytic_account_id" />
								<field name="training_analytic_account_id" class="oe_inline" />
							</div>
						</div>
					</group>
				</xpath>
			</field>
		</record>
	</data>
</openerp>