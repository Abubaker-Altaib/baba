<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="change_password_wizard_view_custom" model="ir.ui.view">
            <field name="name">Change Password</field>
            <field name="model">change.password.wizard</field>
            <field name="inherit_id" ref="base.change_password_wizard_view" />
            <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Change Password" version="7.0">
                    <p>Password can not change, This feature is temporary disabled</p>
                    <footer>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>

                </form>
            </xpath>
            </field>
        </record>



	</data>
</openerp>
