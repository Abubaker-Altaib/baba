<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!--
    Sequence types for Promotion
    -->

        <record id="hr_salary_degree" model="ir.sequence.type">
            <field name="name">Promotion</field>
            <field name="code">hr.salary.degree</field>
        </record>
        
        <record id="hr_salary_bonuses" model="ir.sequence.type">
            <field name="name">Annual Bonus</field>
            <field name="code">hr.salary.bonuses</field>
        </record>
        
        <record id="hr_department" model="ir.sequence.type">
            <field name="name">Department Transfer</field>
            <field name="code">hr.department</field>
        </record>
        
        <record id="hr_job" model="ir.sequence.type">
            <field name="name">Job Transfer</field>
            <field name="code">hr.job</field>
        </record>
        <!--
            Sequences for pickings
        -->
        <record id="seq_salary_degree" model="ir.sequence">
            <field name="name">Promotion</field>
            <field name="code">hr.salary.degree</field>
            <field name="prefix">Promotion/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <record id="seq_salary_bonuses" model="ir.sequence">
            <field name="name">Annual Bonus</field>
            <field name="code">hr.salary.bonuses</field>
            <field name="prefix">Annual Bonus/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <record id="seq_department" model="ir.sequence">
            <field name="name">Department Transfer</field>
            <field name="code">hr.department</field>
            <field name="prefix">Department Transfer/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_hr_job" model="ir.sequence">
            <field name="name">Job Transfer</field>
            <field name="code">hr.job</field>
            <field name="prefix">Job Transfer/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</openerp>
