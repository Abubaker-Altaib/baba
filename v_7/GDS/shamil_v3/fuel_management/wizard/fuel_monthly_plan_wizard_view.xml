<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!-- Monthly Plan View-->

    	<record id="view_fuel_monthly_plan_wizard" model="ir.ui.view">
            <field name="name">fuel monthly plan wizard</field>
            <field name="model">fuel.monthly.plan.wizard</field>
            <field name="arch" type="xml">
            	<form string="Monthly Plan" version="7.0">
                    	<group>
		    	        <field name="date" colspan="2"/>
		    	        <field name="type_plan" colspan="2"/>
		    		<field name="month" colspan="2"/>
		    		<field name="year" colspan="2"/>
		    		<field name="company_id" colspan="2"/>		    		
		    		<field name="type" colspan="2" attrs="{'invisible':[('type_plan','=','mission_extra')]}"/>
		    		<!--field name="dept_cat_id" colspan="2" attrs="{'invisible':[('type','=','departments')]}" widget="selction" /-->
                    	</group>
                        <notebook colspan="4">
                        	<page string="Extra Fuel Quantities" >
                                	<field name="extra_fuel_lines" nolabel="1">
                                        	<form string="Extra fuel" version="7.0">
                                                        <group>
		                                		<field name="product_id" widget="selction" domain="[('fuel_ok','=',True)]"/>
		                                                <field name="product_qty"/>
		                                                <field name="department_id_fuel"/>
		                                                <field name="budget_depart"/>  
                                                        </group>                                                     
                                                </form>
                                                <tree editable="top" string="Extra fuel" >
                                        		<field name="product_id" widget="selction" domain="[('fuel_ok','=',True)]"/>
                                                        <field name="product_qty"/>
                                                        <field name="department_id_fuel"/>
                                                        <field name="budget_depart"/>                             
                                                </tree>
                                        </field>
                                </page>
                        </notebook>
                        <footer>
	 	        	<button name="compute_plan" string="Compute" type="object" default_focus="1" class="oe_highlight"/>
                                or
                  		<button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
    	    	</form>
            </field>
	</record>

        <!-- Monthly Plan Action-->
        <record id="action_fuel_monthly_plan_wizard" model="ir.actions.act_window">
            <field name="name">Monthly Plan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fuel.monthly.plan.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_fuel_monthly_plan_wizard"/>
            <field name="target">new</field>
        </record>


      <!-- Monthly Plan-->
        <menuitem
                name="Compute Fuel Monthly Plan"
                parent="menu_fuel_montly_plan"
                action="action_fuel_monthly_plan_wizard"
                id="menu_fuel_monthly_plan_wizard"
                />

    </data>
</openerp>
