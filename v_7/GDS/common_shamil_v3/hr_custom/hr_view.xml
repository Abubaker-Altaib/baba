 <!--
        ============
        Employee Category inherits
        ============
        -->
       <record id="hr_inherit_category" model="ir.ui.view">
            <field name="name">hr.employee.category.form.inherit</field>
            <field name="model">hr.employee.category</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr.view_employee_category_form"/>
            <field name="arch" type="xml">
                  <field name="name" position="before">
                  <field name="code" />
                  </field>
                  <field name="parent_id" position="after">
                  <field name="employee_ids" domain="[('state','=','approved')]" />
                  </field>
            </field>
        </record>
        
      <record id="hr_inherit_category_tree" model="ir.ui.view">
            <field name="name">hr.employee.category.list.inherit</field>
            <field name="model">hr.employee.category</field>
            <field name="type">tree</field>
            <field eval="8" name="priority"/>
            <field name="inherit_id" ref="hr.view_employee_category_list"/>
            <field name="arch" type="xml">
            <tree string="Employees Categories">
                       <field name="code" />
                </tree> 
             </field>
        </record>
 <!--
        ============
        Employee  inherits
        ============
        -->
       <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before"> 
                    <header>
                        <button name="experiment" string="Experiment" states="draft" type="workflow" class="oe_highlight" groups="base.group_user"/>
                        <button name="approve" string="Approve" states="draft,experiment" type="workflow" class="oe_highlight" groups="base.group_user"/>                
                        <button name="refuse" string="Refuse" states="approved,experiment" type="workflow" class="oe_highlight" groups="base.group_user"/>
                        <button string="Set to Draft" name="set_to_draft" states="refuse" type="workflow"  icon="gtk-convert"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,experiment,approved,refuse"/>
                    </header>
                </xpath>
                <field name="name" position="replace">
            	    <field name="name" attrs="{'readonly':[('state','not in', ('draft'))]}"/>
                </field>
                <field name="department_id" position="replace" on_change="onchange_department_id(department_id)">
            	    <field name="department_id" required="1" attrs="{'readonly':[('state','not in', ('draft'))]}" on_change="onchange_department_id(department_id)"/>
                </field>
                <field name="job_id" position="replace">
            	    <field name="job_id" required="1" attrs="{'readonly':[('state','not in', ('draft'))]}"/>
                </field>
               <field name="gender" position="replace">
            	    <field name="gender" required="1" attrs="{'readonly':[('state','not in', ('draft'))]}"/>
                </field>
               <field name="marital" position="replace">
            	    <field name="marital" required="1" attrs="{'readonly':[('state','not in', ('draft'))]}"/>
                </field>
                <field name="birthday" position="replace">
            	    <field name="birthday" required="1" attrs="{'readonly':[('state','not in', ('draft'))]}"/>
                </field>
                <!--xpath expr='//field[@name="category_ids"]' position="replace" version="7.0"> 
            	    <field name="category_ids"  widget="many2many_tags" placeholder="e.g. Part Time" groups="base.group_hr_user" attrs="{'readonly':[('state','not in', ('draft'))]}"/>
                </xpath-->
                <xpath expr='//label[@for="category_ids"]' position="before" version="7.0"> 
                    <group  col="2" colspan="4">
			    <field name="emp_code"/>
		            <field name="sequence"/>
		            <field name="employee_type" invisible="1"/>
                   </group>
                </xpath>
                <xpath expr='//group[@string="Birth"]' position="inside" version="7.0"> 
		     <field name="birth_place"/>
		     <field name="birthday_certificate_id"/>
                </xpath>
                <xpath expr='//field[@name="address_home_id"]' position="after" version="7.0"> 
		     <field name="house_type"/>
		     <field name="emergency_data"/>
		     <field name="blood_type"/>
                </xpath>
                <xpath expr='//field[@name="job_id"]' position="after" version="7.0"> 
		     <field name="join_date"/>
                </xpath>
                <xpath expr='//group[@string="Citizenship &amp; Other Info"]' position="inside" version="7.0"> 
		    <field name="nationality_no"/>
		    <field name="nationality_date"/>
		    <field name="religion"/>
                </xpath>
                <xpath expr='//group[@string="Active"]' position="replace" version="7.0"> 
		     <group string="Employment Dates">
                          <field name="employment_date"/>
                          <field name="first_employement_date" attrs="{'required':[('employee_type','=', 'employee')]}"/>
                          <field name="end_date"  />
                          <field name="re_employment_date"/>
                          <field name="participate_date"/>
                     </group>
		     <group string="File Info">
                          <field name="file_no"/>
                          <field name="job_letter_no"/>
                          <field name="job_letter_date"/>
                     </group>
		     <group string="National Service Info">
                          <field name="nation_srevice"/>
                          <field name="nation_ser_date"/>
                     </group>
		     <group string="Active" name="active_group">
                          <field name="active"/>
                          <label for="period"/>
                          <div>
                          <field name="period" class="oe_inline" attrs="{'required':[('state','=', 'experiment')]}"/> Months </div>
                          <field name="delegation"/>
                          <!--<field name="bonus_date"/>-->
                     </group>
                </xpath>
                <xpath expr='//page[@string="HR Settings"]' position="after" version="7.0"> 
		    <page string="Qualifications">
                     	<field name="qualification_ids" nolabel="1">
                          <form string="Employee Qualifications">
                <field name="emp_qual_id" colspan="2"/>
                <field name="qual_date" colspan="2" />
                <field name="organization" colspan="2"/>
                <field name="specialization"  colspan="2"/>
                <field name="state" colspan="2"/>
                                </form>
                                <tree string="Employee Qualifications" editable="top">
                <field name="emp_qual_id" />
                <field name="qual_date"  />
                <field name="organization" />
                <field name="specialization"  />
                <field name="state" />
                                </tree>
                        </field>
                     </page>
                </xpath>
                <field name="user_id" position="replace">
            	    <field name="user_id" on_change="onchange_user(user_id)" groups="base.group_system"/>
                </field>
                <field name="parent_id" position="replace">
                         <field name="parent_id" on_change="onchange_department_id(department_id)" />
                </field>
                <field name="company_id" position="replace">
            	     <field name="company_id"  on_change="onchange_company(company_id)" attrs="{'readonly':[('state','not in','draft')]}"/>
                      </field>

                 <!--field name="coach_id" position="replace">
                      </field-->
                 </field>
        </record>
     
        <record id="view_employee_tree_inherit" model="ir.ui.view">
             <field name="name">view.employee.tree.inherit</field>
             <field name="model">hr.employee</field>
             <field name="inherit_id" ref="hr.view_employee_tree"/>
             <field name="arch" type="xml">
                <tree string="Employees"  position="replace">
                <tree colors="red:state in ('refuse');blue:state in ('draft');black:state in ('approved')" string="employee" >
                    <field name="emp_code" select="1"/>
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="company_id" />
                    <field name="job_id"/>
                    <field name="state"/>

                </tree>
                </tree>  
             </field>
        </record>

        <record id="view_employee_filter_inherit" model="ir.ui.view">
            <field name="name">Employees inherit</field>
            <field name="model">hr.employee</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
            <xpath expr='//field[@name="name"]' position='after'>
                    <field name="emp_code"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="department_id" />
                    <field name="state"/>
                    <field name="otherid"/>
            </xpath>           
            <xpath expr='//group[@string="Group By..."]' position='replace'>
                    <group expand="0" string="Group By...">
                    <filter string="Manager" icon="terp-personal" domain="[]" context="{'group_by':'parent_id'}"/>
                    <!--filter string="Coach" icon="terp-personal" domain="[]" context="{'group_by':'coach_id'}" /-->
                    <separator orientation="vertical" />
                    <filter string="Department" icon="terp-personal+" domain="[]" context="{'group_by':'department_id'}"/>
                    <!--filter string="General Department" icon="terp-personal+" domain="[]" context="{'group_by':'dept_parent_id'}"/-->
                    <filter string="Job" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'job_id'}"/>
                    <filter string="Company" icon="terp-go-home" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Payroll Department" icon="terp-go-home" domain="[]" context="{'group_by':'payroll_state'}"/>
                    <filter string="State" icon="terp-go-home" domain="[]" context="{'group_by':'state'}"/>
                    </group>
            </xpath>
             </field>
         </record> 


